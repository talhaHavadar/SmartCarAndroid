<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.scorptech.turtleremote.settingsScreen.SettingsView">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Switch
            android:text="@string/settings_notification_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="13dp"
            android:paddingRight="13dp"
            android:textSize="18sp"
            android:textColor="@color/textDark"
            android:textStyle="normal"
            android:id="@+id/swSeatNotification" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/settingsSeperator"></RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <Switch
            android:text="@string/settings_auto_self_driving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="13dp"
            android:paddingRight="13dp"
            android:textSize="18sp"
            android:textColor="@color/textDark"
            android:textStyle="normal"
            android:id="@+id/swAutoSelfDriving" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/settingsSeperator"></RelativeLayout>
    </LinearLayout>



</LinearLayout>
